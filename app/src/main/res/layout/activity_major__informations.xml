<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.shanato.rglhsapp.Major_Informations"
    android:background="#fff1ffa3">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"

        android:src="@drawable/rglhslogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Rules"
        android:id="@+id/butto1"
        android:layout_below="@+id/textView36"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:background="@android:drawable/ic_input_add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Fees"
        android:id="@+id/butto2"
        android:layout_below="@+id/butto1"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_input_add"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major Information"
        android:id="@+id/textView36"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:textColor="#ff07bc4a"
        android:textSize="24dp"
        android:background="@android:drawable/toast_frame" />


</RelativeLayout>
