<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.shanato.rglhsapp.Students_Lists"
    android:background="#fff1ffa3">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"

        android:src="@drawable/rglhslogo" />

    <TextView
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:text="Students Lists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/alert_light_frame"
        android:textColor="#ff380aff"
        android:textSize="24dp"
        android:id="@+id/textV58" />

    <ScrollView
android:layout_below="@+id/textV58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch 2009"
                android:id="@+id/buttt111"

                android:layout_centerHorizontal="true"
                android:background="@android:drawable/ic_input_add" />


            <Button

                android:layout_below="@+id/buttt111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch 2010"
                android:id="@+id/buttt2"

                android:layout_centerHorizontal="true"
                android:background="@android:drawable/ic_input_add" />
            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch 2011"
                android:id="@+id/buttt3"

                android:layout_centerHorizontal="true"
                android:layout_below="@+id/buttt2"
                android:background="@android:drawable/ic_input_add" />
            <Button

                android:layout_below="@+id/buttt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch 2012"
                android:id="@+id/buttt4"

                android:layout_centerHorizontal="true"
                android:background="@android:drawable/ic_input_add" />
            <Button

                android:layout_below="@+id/buttt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch 2013"
                android:id="@+id/buttt5"

                android:layout_centerHorizontal="true"
                android:background="@android:drawable/ic_input_add" />
            <Button

                android:layout_below="@+id/buttt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch 2014"
                android:id="@+id/buttt6"

                android:layout_centerHorizontal="true"
                android:background="@android:drawable/ic_input_add" />

            <Button

                android:layout_below="@+id/buttt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch 2015"
                android:id="@+id/buttt7"

                android:layout_centerHorizontal="true"
                android:background="@android:drawable/ic_input_add" />

            <Button

                android:layout_below="@+id/buttt7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch 2016"
                android:id="@+id/buttt8"

                android:layout_centerHorizontal="true"
                android:background="@android:drawable/ic_input_add" />


        </RelativeLayout>





    </ScrollView>

</RelativeLayout>
